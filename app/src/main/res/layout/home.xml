<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title2"
        android:text="@string/om_sri_sai"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_below="@+id/title2"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="@string/title"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:text="Address:"
        android:textStyle="bold"
        android:textColor="@color/orange"
        />

    <TextView
    android:id="@+id/address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/address_title"
    android:layout_marginTop="10dp"
    android:text="@string/address" />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/address"
       android:text="Get Directions"
       android:id="@+id/btn_directions"/>

    <TextView
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_directions"
        android:layout_marginTop="10dp"
        android:text="Phone:"
        android:textStyle="bold"
        android:textColor="@color/orange"
        />

    <TextView
    android:id="@+id/phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/phone_title"
    android:layout_marginTop="10dp"
    android:autoLink="phone"
    android:text="@string/phone"
    android:layout_alignEnd="@+id/email"
    android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginTop="10dp"
        android:text="Email:"
        android:textStyle="bold"
        android:textColor="@color/orange"
        />

    <TextView
    android:id="@+id/email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/email_title"
    android:layout_marginBottom="10dp"
    android:autoLink="email"
    android:text="@string/email" />


    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:id="@+id/lvExp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home2"
        android:layout_below="@+id/lvExp"
        android:layout_marginTop="10dp"
        android:id="@+id/pic1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
